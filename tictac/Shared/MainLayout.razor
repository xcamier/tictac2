@inherits LayoutComponentBase
@inject NavigationManager Navig

<PageTitle>Tictac</PageTitle>

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Tictac</MudText>
        <MudSpacer />
        <MudButton 
            Variant="Variant.Filled" 
            DisableElevation="true" 
            Color="Color.Primary"
            OnClick='() => Navig.NavigateTo("/")'>Home
        </MudButton>
        <MudButton 
            Variant="Variant.Filled" 
            DisableElevation="true" 
            Color="Color.Primary"
            OnClick='() => Navig.NavigateTo("/counter")'>Counter
        </MudButton>
        <MudButton 
            Variant="Variant.Filled" 
            DisableElevation="true" 
            Color="Color.Primary"
            OnClick='() => Navig.NavigateTo("/fetchdata")'>Fetch data
        </MudButton>
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>