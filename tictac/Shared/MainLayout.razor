@inherits LayoutComponentBase
@inject NavigationManager Navig

<PageTitle>Tic Tac</PageTitle>

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Tic Tac</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudButton 
                    Variant="Variant.Filled" 
                    DisableElevation="true" 
                    Color="Color.Primary"
                    OnClick='() => Navig.NavigateTo("/logs")'>Logs
                </MudButton>
                <MudButton 
                    Variant="Variant.Filled" 
                    DisableElevation="true" 
                    Color="Color.Primary"
                    OnClick='() => Navig.NavigateTo("/taskslist")'>Tasks List
                </MudButton>
                <MudButton 
                    Variant="Variant.Filled" 
                    DisableElevation="true" 
                    Color="Color.Primary"
                    OnClick='() => Navig.NavigateTo("/calendar")'>Calendar
                </MudButton>
                <MudButton 
                    Variant="Variant.Filled" 
                    DisableElevation="true" 
                    Color="Color.Primary"
                    OnClick='() => Navig.NavigateTo("/reports")'>Reports
                </MudButton>
                <MudButton 
                    Variant="Variant.Filled" 
                    DisableElevation="true" 
                    Color="Color.Primary"
                    OnClick='() => Navig.NavigateTo("/topics")'>Topics
                </MudButton>
                <MudMenu Label="Settings" Variant="Variant.Filled" Color="Color.Primary" Direction="Direction.Right" OffsetY="true" DisableElevation>
                    <MudMenuItem OnClick='() => Navig.NavigateTo("/projects")'>Projects</MudMenuItem>
                    <MudMenuItem OnClick='() => Navig.NavigateTo("/objectives")'>Objectives</MudMenuItem>
                    <MudMenuItem OnClick='() => Navig.NavigateTo("/fundamentals")'>Fundamentals</MudMenuItem>
                    <MudMenuItem OnClick='() => Navig.NavigateTo("/tags")'>Tags</MudMenuItem>
                </MudMenu>
            </Authorized>
        </AuthorizeView>

        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>